<Window x:Class="AulaDeVariaveis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AulaDeVariaveis"
        mc:Ignorable="d"
        Title="MainWindow" Height="256" Width="256">
    <Grid>
        <Label Content="Digite um número para eu somar com cinco!"/>
        <TextBox Width="100" Height="30" Name="InputDeDados" />
        <TextBox Name="caixaParaReceberDados" Width="100" Height="20" Margin="0,0,0,60" VerticalAlignment="Bottom" />
        <Button Width="100" Height="20" Margin="0,0,0,0" VerticalAlignment="Bottom" Name="Button" Click="Button_Click" Content="Somar"/>

    </Grid>
</Window>
